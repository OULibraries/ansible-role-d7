# Path for d7 scripts
PATH=/opt/d7/bin:/opt/php/bin:/usr/local/bin:/usr/bin:/bin:/sbin:$PATH

# tag for drupal boxes
ENV_NAME="{{ environment_name }}"

# Directory for S3 snapshots
D7_S3_SNAPSHOT_DIR="{{ d7_s3_snapshot_base_dir }}/$(/opt/oulib/aws/bin/ec2_get_arn.sh)"

# Public facing host name
D7_HOST_SUFFIX="{{httpd_dn_suffix}}"

# Default MySQL target
D7_DBHOST="{{ mariadb_host }}"
D7_DBPORT="{{ mariadb_port }}"
D7_DBSU="{{ mariadb_root_user}}"

# Default CAS host
D7_CAS="{{ d7_cas }}"

