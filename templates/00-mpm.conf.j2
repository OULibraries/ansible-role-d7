# prefork MPM: Implements a non-threaded, pre-forking web server
# See: http://httpd.apache.org/docs/2.4/mod/prefork.html
LoadModule mpm_prefork_module modules/mod_mpm_prefork.so

# Allow multiple requests per connection
KeepAlive On
# Only wait 5s for subsequent requests
KeepAliveTimeout 5

<IfModule prefork.c>
   # always have at least 30 processes
   StartServers        30
   MinSpareServers     30
   # Don't let more than 10 unused processes exist
   MaxSpareServers     10
   # don't have more than 100 processes
   MaxRequestWorkers   100
   # recycle procs after 3000 requests
   MaxRequestsPerChild 3000
</IfModule>



